# Environment and service info
NODE_ENV=development
PORT=3001
SERVICE_NAME=restaurant-service

# PostgreSQL database credentials
DB_HOST=localhost
DB_PORT=5432
# DB_NAME=foodorder_db
# DB_USER=foodorder_user
# DB_PASSWORD=your_secure_password
DB_NAME=paymentdb
DB_USER=paymentuser
DB_PASSWORD=paymentpass

# Database pool configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000      # Time (ms) before idle connections close
DB_CONNECTION_TIMEOUT=5000      # Max wait time (ms) for acquiring a connection

# JWT authentication settings
JWT_SECRET=super_secret_jwt_key_change_me
JWT_EXPIRY=24h

# Vault settings (for production secret management)
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your_vault_token
VAULT_PATH=secret/foodorder

# Logging configuration
LOG_LEVEL=info                   # Available: error, warn, info, debug
LOG_FORMAT=json                  # json or text

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000      # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100      # Max requests per window per IP
