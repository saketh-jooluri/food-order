# Server
NODE_ENV=development
PORT=3003
SERVICE_NAME=payment-service

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=paymentdb
DB_USER=paymentuser
DB_PASSWORD=paymentpass
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis (for idempotency)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
IDEMPOTENCY_KEY_TTL=86400

# JWT
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_EXPIRY=2h

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Payment Processing
PAYMENT_PROCESSING_TIMEOUT=5000
PAYMENT_RETRY_ATTEMPTS=3

# Fraud Detection
FRAUD_CHECK_ENABLED=true
FRAUD_MAX_DAILY_AMOUNT=50000
FRAUD_MAX_DAILY_TRANSACTIONS=10
FRAUD_MAX_TRANSACTION_AMOUNT=5000
FRAUD_VELOCITY_CHECK_WINDOW_MINUTES=60

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PAYMENT_ENDPOINT=20
