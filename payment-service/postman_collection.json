{
    "info": {
        "_postman_id": "payment-service-collection-1",
        "name": "Payment Service API",
        "description": "API Collection for Payment Service including payment processing, status checks, and reconciliation.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Metrics",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/metrics",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "metrics"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Process Payment",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Idempotency-Key",
                        "value": "{{$guid}}",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{authToken}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"order_id\": 12345,\n    \"amount\": 100.00,\n    \"method\": \"credit_card\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/payments",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "payments"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Get Payment Status",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{authToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/payments/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "payments",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": "1"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Refund Payment (Admin)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"reason\": \"Customer request\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/payments/:id/refund",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "payments",
                        ":id",
                        "refund"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": "1"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Reconciliation Report (Admin)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/payments/reconciliation/report?start_date=2024-01-01&end_date=2024-12-31",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "payments",
                        "reconciliation",
                        "report"
                    ],
                    "query": [
                        {
                            "key": "start_date",
                            "value": "2024-01-01"
                        },
                        {
                            "key": "end_date",
                            "value": "2024-12-31"
                        }
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3003",
            "type": "string"
        },
        {
            "key": "authToken",
            "value": "ReplaceWithValidToken",
            "type": "string"
        },
        {
            "key": "adminToken",
            "value": "ReplaceWithAdminToken",
            "type": "string"
        }
    ]
}